syntax on

colorscheme besDark

set autoindent

set showmatch

set showcmd

set nu!

set hlsearch

filetype on
filetype plugin on
filetype indent on

set nobackup

set tabstop=4
set smarttab
set shiftwidth=4
set softtabstop=4
set expandtab

set cursorline

set autoread

set ignorecase

set fileencodings=utf-8,gbk8
set incsearch "搜索时实时匹配

"禁止markdown文件折叠
"let g:vim_markdown_folding_disabled=1

set guifont=Menlo:h14

"pathogen插件设置
execute pathogen#infect()

"powerline插件设置
"set guifont=Menlo\ for\ Powerline:h14
set laststatus=2
set nocompatible
set t_Co=256
let g:Powerline_symbols = 'fancy'
"开启python函数自动补全
autocmd FileType python set omnifunc=pythoncomplete#Complete

"supertab插件
let g:SuperTabDefaultCompletionType = "context"
"pydiction插件
let g:pydiction_location = '~/.vim/bundle/pydiction/complete-dict'
